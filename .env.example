# ==========================================
# 数据库配置
# ==========================================
DATABASE_URL=sqlite+aiosqlite:///./langgraph_app.db

# ==========================================
# JWT 配置（生产环境请修改为强随机字符串）
# ==========================================
# 生成密钥命令: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production
REFRESH_SECRET_KEY=your-refresh-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# 应用配置
# ==========================================
APP_NAME=DeepAgentChat
DEBUG=true

# ==========================================
# LangGraph 配置
# ==========================================
CHECKPOINT_DB_PATH=./langgraph_app.db
LANGGRAPH_RECURSION_LIMIT=1000

# ==========================================
# LLM 配置
# ==========================================
# OpenAI API 配置
OPENAI_API_KEY=your-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
DEFAULT_LLM_MODEL=gpt-4o-mini

# 或者使用 SiliconFlow (国内可访问)
# OPENAI_API_KEY=your-siliconflow-api-key
# OPENAI_API_BASE=https://api.siliconflow.cn/v1
# DEFAULT_LLM_MODEL=Qwen/Qwen3-8B

# 或者使用其他兼容 OpenAI API 的服务
# OPENAI_API_KEY=your-api-key
# OPENAI_API_BASE=https://your-llm-service.com/v1
# DEFAULT_LLM_MODEL=your-model-name
